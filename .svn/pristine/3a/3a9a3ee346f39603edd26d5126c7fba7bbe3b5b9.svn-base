.form-group {
	label {
		font-weight: normal;
		font-size: 12px;
	}
	.form-control {
		font-size: 12px;
	}
}

.row select.form-control {
	display: inline-block;
	width: 100%;
}
.form-group2 select.form-control {
	width: auto !important;
}
.form-group2 span.inputdate {
	display: inline-block;
	width: auto;
}

.row select.form-control {
	padding: 0;
}


.row button.ajaxsubmit,
table.bottraps_style a.ajaxsubmit{
	padding: 1px 5px;
}

.form-group {
	margin: 5px auto;

	label {
	    display: inline-block;
	    font-weight: 700;
	    margin-bottom: 5px;
	    max-width: 100%;
	}

	> label {
	    min-width: 150px;
	    text-align: right;
	}




	.form-control {
	    background-color: #fff;
	    background-image: none;
	    border: 1px solid #ccc;
		/*
	    border-radius: 4px;
	    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
	    */
	    color: #555;
	    display: block;
	    font-size: 14px;
	    height: 30px;
	    line-height: 1.42857;
	    padding: 3px 9px;
	    transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
	    width: 100%;
	}

	input.date {
		min-width: 100px;
	}
	.form-control.inputdate {
		width: auto;
		margin-left: 0;
	}
	textarea.form-control {
		width: 90%; /* fallback if needed */
	  	width: calc(100% - 160px );
		min-height: 100px;
		height: auto;
	}

}




[class^="col-"] .form-group {
	[class^="col-"] label {
		height : 18px;
		margin-top : 7px;
	}

	.ajaxsubmit {
		padding: 4px 12px;
	}
}






