/*
* input date
*/

.form-control.inputdate {
	display: inline-block;
	margin-left: 5px;
	min-width: auto;
}
.form-control.inputdate .qdate {
	width: 120px;
}
.form-control.inputdate .qdatemonth {
	width: 87px;
}

.form-control.inputdate .icon {
	width: 21px;
	height: 21px;
	background: url("../images/cal.gif") 0 2px no-repeat;
	position: absolute;
	top: 4px;
	margin-left: -19px;
	cursor: pointer;

}



/*
 *
 */
.form-group2 {
	display: inline-block;
    float: left;
    margin: 5px;
	position: relative;
}

.form {
	border: 1px solid #ddd;
	padding: 10px 15px;
}
table .row {
	margin: 5px 0;
}
table .form-group label {
	font-weight: normal;
}

.form .form-actions {
    background: rgba(249, 249, 249, 0.9) none repeat scroll 0 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: block;
    margin: 25px -15px -10px;
    padding: 13px 14px 15px;
    text-align: right;
}
.form-actions .inputsubmit,
.form-actions button[type=submit] {
	height: 35px;

}
.form-group2 button[type=submit] {
	height: 25px;
}
.form-actions .inputsubmit:BEFORE,
.form-actions button[type=submit]:BEFORE {
	font-family: 'Glyphicons Halflings';
	content: "\e025";
	margin-right: 10px;
	font-size: 15px;
}
/*
 * fix bootstrap
 */
.form-group {
    margin: 10px auto;
}
.form-group .form-control.inputdate {
	width: auto;
	margin-left: 0;
}
.form-group select.form-control,
.form-group textarea.form-control {
	width: 90%; /* fallback if needed */
  	width: calc(100% - 160px );
}
.form-group textarea.form-control {

	min-height: 100px;
}

.form-group > label {
    min-width: 150px;
    text-align: right;
}
.form-group > label::after {
    content: ":";
}

.form-group input[type=checkbox] {
	position: absolute;
	margin: 3px 0 0 5px;
}


